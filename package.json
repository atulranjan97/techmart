{
  "name": "techmart",
  "version": "1.0.0",
  "description": "eCommerce application built with the MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "node --watch --env-file=.env backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node --env-file=.env backend/seeder.js",
    "data:destroy": "node --env-file=.env backend/seeder.js -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atulranjan97/techmart.git"
  },
  "author": "Atul",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atulranjan97/techmart/issues"
  },
  "homepage": "https://github.com/atulranjan97/techmart#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "colors": "^1.4.0",
    "express": "^5.2.1",
    "mongoose": "^9.1.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
